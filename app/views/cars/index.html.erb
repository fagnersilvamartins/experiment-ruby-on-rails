<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td>
          <%= link_to 'Show', car, :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Edit', edit_car_path(car), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path , :class => 'btn btn-primary' %>
