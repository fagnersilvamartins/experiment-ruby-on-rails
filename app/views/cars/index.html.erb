<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table data-toggle="table"
       data-pagination="true"
       >
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td>
          <%= link_to 'Show', car %>
          <%= link_to 'Edit', edit_car_path(car) %>
          <%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path %>
